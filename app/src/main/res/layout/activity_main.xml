<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edName"
            android:hint="Name" android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edEmail"
            android:hint="Email" android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/edName"
            app:layout_constraintEnd_toEndOf="@+id/edName" app:layout_constraintStart_toStartOf="@+id/edName"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edPhone"
            android:hint="Phone" android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/edEmail"
            app:layout_constraintEnd_toEndOf="@+id/edEmail" app:layout_constraintStart_toStartOf="@+id/edEmail"/>
    <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/edPhone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>